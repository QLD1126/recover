.container {
  padding-top: 0;
  height: 100vh;
}
.container > .top {
  background-color: #2E8EF4;
  width: 96vw;
  padding: 2vw;
  color: #fff;
}
.container > .top > view:first-child {
  margin: 5vh 0;
  font-size: 32rpx;
  font-weight: bold;
}
.container > .top .flex_between {
  margin-bottom: 25rpx;
}
.container > .top .flex_between image {
  width: 44rpx;
  height: 44rpx;
  position: relative;
  top: 10rpx;
}
.container > .top > .tabbar {
  width: 100%;
  background: #2E8EF4;
  position: relative;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container > .top > .tabbar .white {
  background: #fff;
}
.container > .top + image {
  margin: 261rpx auto;
  width: 547rpx;
  height: 342rpx;
  display: block;
}
.switch {
  position: relative;
